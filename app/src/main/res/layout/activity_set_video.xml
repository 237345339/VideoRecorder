<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:id="@+id/ll_set_clear_density">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_set_clear_density"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清晰度"
                android:textColor="#000000"
                android:textSize="28sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置清晰度"
                android:layout_alignLeft="@+id/tv_set_clear_density"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/preferenceindicate"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_set_frame_rate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_set_frame_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帧速率"
                android:textSize="28sp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置每秒帧数"
                android:layout_alignLeft="@+id/tv_set_frame_rate"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/preferenceindicate"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_set_focus_mode"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_set_focus_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对焦方式"
                android:textSize="28sp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择自动或手动对焦"
                android:layout_alignLeft="@+id/tv_set_focus_mode"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/preferenceindicate"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>